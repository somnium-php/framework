{
    "name": "somnium-php/framework",
    "description": "The Somnium PHP Framework",
    "keywords": [
        "framework",
        "somnium"
    ],
    "license": "MIT",
    "homepage": "https://somnium-php.com",
    "support": {
        "issues": "https://github.com/somnium-php/framework/issues",
        "source": "https://github.com/somnium-php/framework"
    },
    "authors": [
        {
            "name": "Daren Weimer",
            "email": "darenweimer@somnium-php.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-bcmath": "*"
    },
    "autoload": {
        "psr-4": {
            "Somnium\\": "src/"
        },
        "files": [
            "src/Core/functions.php",
            "src/helpers.php"
        ]
    },
    "config": {
        "optimize-autoloader": false,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
